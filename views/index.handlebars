<h1>Burger Love</h1>

<ol>
  {{#each burgers}}
    {{#unless devoured}}
      <li>
          {{burger_name}}
          <button class="devourBurg" data-id="{{id}}" data-newdevour="{{devoured}}">DEVOUR!</button>
      </li>
    {{/unless}}
  {{/each}}
</ol>

<h2>Add Burger</h2>
<form class="create-form">
  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="burger_name" />
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label> <br />
    <input type="radio" name="devoured" value="1"> Devoured!<br />
    <input type="radio" name="devoured" value="0" checked> Not Devoured
  </div>
  <button type="submit">Add Burger</button>
</form>