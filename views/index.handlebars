<div class="container">
<h1 class="font-weight-bold text-dark display-4 jumbotron-fluid">Burger Love</h1>

<div class="card w-50">
<ol class="list-group list-group-flush">
  {{#each burgers}}
    {{#unless devoured}}
      <li class="list-group-item d-flex justify-content-between align-items-center">
          {{burger_name}}
          <button class="devourBurg btn btn-sm btn-outline-danger fas fa-utensils shadow-sm text-uppercase" data-id="{{id}}" data-newdevour="{{devoured}}">  DEVOUR!  </button>
      </li>
    {{/unless}}
  {{/each}}
</ol>
</div>

<div class="card w-50 add-burger border-warning">
  <div class="card-body">
  <h2 class="card-title">Add Burger</h2>
      <form class="create-form">
        <div class="form-group form-inline">
          <label for="burg" class="my-1 mr-2 font-weight-bold">Burger Name</label>
          <input type="text" id="burg" name="burger_name" class="form-control form-control-sm"/>
        </div>
        <div class="text-center">
        <button type="submit" class="fas fa-hamburger btn btn-warning shadow-sm text-uppercase">  Add Burger  </button>
        </div>
      </form>
    </div>
  </div>
</div>